<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tylerlieu.c195.controller.CustomersController">
    <TableView fx:id="customersTable" layoutX="14.0" layoutY="77.0" prefHeight="600.0" prefWidth="840.0" tableMenuButtonVisible="true">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="nameColumn" prefWidth="120.0" text="Name" />
            <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Phone" />
            <TableColumn fx:id="addressColumn" prefWidth="120.0" text="Address" />
            <TableColumn fx:id="divisionColumn" prefWidth="120.0" text="State / Division" />
            <TableColumn fx:id="countryColumn" prefWidth="120.0" text="Country" />
            <TableColumn fx:id="postalColumn" prefWidth="120.0" text="Postal Code" />
        </columns>
    </TableView>
    <Label layoutX="14.0" layoutY="14.0" prefHeight="52.0" prefWidth="337.0" text=" Customers">
        <font>
            <Font name="System Bold" size="32.0" />
        </font>
    </Label>
   <Button fx:id="btnAddCustomer" layoutX="866.0" layoutY="77.0" mnemonicParsing="false" onAction="#onButtonAddClick" prefHeight="100.0" prefWidth="200.0" text="Add">
      <font>
         <Font size="24.0" />
      </font></Button>
   <Button fx:id="btnUpdateCustomer" layoutX="866.0" layoutY="183.0" mnemonicParsing="false" onAction="#onButtonUpdateClick" prefHeight="100.0" prefWidth="200.0" text="Update">
      <font>
         <Font size="24.0" />
      </font></Button>
   <Button fx:id="btnDeleteCustomer" layoutX="866.0" layoutY="289.0" mnemonicParsing="false" onAction="#onButtonDeleteClick" prefHeight="100.0" prefWidth="200.0" text="Delete">
      <font>
         <Font size="24.0" />
      </font></Button>
</AnchorPane>
